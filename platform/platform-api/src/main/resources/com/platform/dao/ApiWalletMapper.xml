<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiWalletMapper">


    <select id="queryUserWallet" resultType="com.platform.entity.WalletVo">
		SELECT
	open_id as openId,
	balance as balance
        FROM
	nideshop_wallet
        WHERE
	open_id = #{openId}
	</select>

	<update id="updateWalletBalance" parameterType="com.platform.entity.WalletVo" >
		update  nideshop_wallet
		set

		`balance` = #{walletVo.balance}

	 where open_id = #{walletVo.openId}
	</update>

	<insert id="insertWalletBalance" parameterType="com.platform.entity.WalletVo" >
		INSERT INTO nideshop_wallet
		VALUES
	(
		#{walletVo.openId},
		#{walletVo.balance}
	)
	</insert>
</mapper>