<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiCusRelationDao">

    <sql id="selectSql">
        SELECT
        T.id,
        T.from_open_id,
        T.to_open_id,
        T.create_time,
        T.saler_id
        FROM nideshop_cus_relation T
        WHERE 1=1
        <if test="params.name != null and params.name.trim() != ''">
            AND T.NAME LIKE '%${params.name}%'
        </if>
    </sql>

    <select id="selectCusRelationPage" resultType="com.platform.entity.CusRelationEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.entity.CusRelationEntity">
        <include refid="selectSql"/>
    </select>
</mapper>